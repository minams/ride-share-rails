<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Raise the Roof RideShare!</h1>
      <header>
      <nav>
        <ul>
          <li>
            <%= link_to "All Drivers", 
            drivers_path,  class: "nav_links" %>
          </li>
          <li>
            <%= link_to "Add Driver",
            new_driver_path,  class: "nav_links"  %>
          </li>
          <li>
            <%= link_to "All Passengers", 
            passengers_path,  class: "nav_links" %>
          </li>
          <li>  
          <%= link_to "Add Passenger",
            new_passenger_path,  class: "nav_links"  %>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
    <%= link_to "Home", root_path %>
    </footer>
  </body>
</html>
