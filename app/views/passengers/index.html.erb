<div class = "header">
<h2 >RideShare Passengers</h2>
</div>

<ul>
<div class = "passenger">

<% @passengers.each do |passenger| %>
  <li>
    <%= image_tag "allpassengers.jpeg", alt: "Image of Wonder doll" %>
    <%= link_to passenger.name, passenger_path(passenger.id) %>
    <%= link_to "Edit", edit_passenger_path(passenger.id) %>
    <%= link_to "Delete", 
      passenger_path(passenger.id), method: :delete, 
      data: { confirm: 'Are you sure you want to delete this passenger?' }%>
  </li>
<% end %>
</div>
</ul>