<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

 <!-- > need to refactor with partial form
 --> 

<%= form_with model: @passenger, class: 'create-passenger' do |f| %>

  <p> Add New Passenger </p>

  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

  <%= f.submit "Save Passenger", class: "passenger-form__submit-btn" %>

<% end %>